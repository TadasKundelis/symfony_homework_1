{% extends 'base.html.twig' %}

{% block title %}Projects list{% endblock %}

{% block body %}
    <ul class="list-group m-4">
        <li class="list-group-item list-group-item-info">Projektai</li>
            {% for team in teams %}
                <li class="list-group-item">
                    <h3>{{ team.project }}</h3>
                    <div class="panel panel-default">
                        <div>
                            <a target="_blank"
                            href="https://github.com/nfqakademija/{{ team.name |url_encode }}">github.com/nfqakademija/{{ team.name }}</a>
                            <span class="badge">GitHub</span>
                        </div>
                        <div>
                            <a target="_blank" href="http://{{ team.name |url_encode }}.projektai.nfqakademija.lt/">{{ team.name }}projektai.nfqakademija.lt/</a>
                            <span class="badge">Web</span>
                        </div>
                        <div>
                            <pre>ssh {{ team.name }}@deploy.nfqakademija.lt -p 2222</pre>
                        </div>
                    </div>
                </li>
            {% endfor %}
    </ul>
{% endblock %}